{
  "manifest_version": 3,
  "name": "Auto Slack Chrome",
  "version": "1.0.0",
  "description": "Chrome extension built with TypeScript",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://app.slack.com/*"],
      "js": ["content.js"]
    }
  ]
}